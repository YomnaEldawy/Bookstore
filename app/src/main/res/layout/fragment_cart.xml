<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yomna.bookstore.cart.list.CartFragment"
    android:background="@color/cityLights"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/payment_details_rl"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/cart_item_container"
                ></LinearLayout>
        </ScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/payment_details_rl"
            android:visibility="gone"
            android:layout_above="@id/checkout_container"
            android:background="@color/antiFlashWhite"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please fill in your payment details"
                android:id="@+id/payment_details_tv"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/prestigeBlue"
                android:textSize="20dp"
                android:fontFamily="@font/latobold"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/card_number_et"
                android:hint="Card Number"
                android:layout_marginLeft="100dp"
                android:layout_below="@id/payment_details_tv"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/expiry_date_et"
                android:layout_below="@id/card_number_et"
                android:layout_centerHorizontal="true"
                android:hint="Expiry date"
                android:layout_marginLeft="100dp"
                android:inputType="date"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/submit_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/expiry_date_et"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/checkout_container"
            android:layout_alignParentBottom="true"
            android:background="@color/peace"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/total_label"
                    android:text="Total: "
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/total_value"
                    android:text="173"
                    android:textSize="17dp"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/total_label"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/currency_label"
                    android:text=" EGP"
                    android:textSize="17dp"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/total_value"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:background="@color/prestigeBlue"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Checkout"
                    android:textColor="#FFF"
                    android:textSize="18dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>